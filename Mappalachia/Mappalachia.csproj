<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net6.0-windows</TargetFramework>
		<UseWindowsForms>true</UseWindowsForms>
		<GenerateAssemblyInfo>false</GenerateAssemblyInfo>
		<RootNamespace>Mappalachia</RootNamespace>
		<AssemblyName>Mappalachia</AssemblyName>
		<ApplicationIcon>favicon_small.ico</ApplicationIcon>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
	  <DebugType>none</DebugType>
	  <DebugSymbols>false</DebugSymbols>
	</PropertyGroup>

	<ItemGroup>
	  <Compile Remove="data\**" />
	  <Compile Remove="font\**" />
	  <Compile Remove="img\**" />
	  <Compile Remove="publish\**" />
	  <EmbeddedResource Remove="data\**" />
	  <EmbeddedResource Remove="font\**" />
	  <EmbeddedResource Remove="img\**" />
	  <EmbeddedResource Remove="publish\**" />
	  <None Remove="data\**" />
	  <None Remove="font\**" />
	  <None Remove="img\**" />
	  <None Remove="publish\**" />
	</ItemGroup>

	<ItemGroup>
	  <None Remove="Mappalachia.zip" />
	  <None Remove="package_release.bat" />
	</ItemGroup>

	<ItemGroup>
	  <Content Include="favicon_small.ico" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Data.Sqlite">
			<Version>6.0.3</Version>
		</PackageReference>
		<PackageReference Include="StyleCop.Analyzers" Version="1.1.118">
		  <PrivateAssets>all</PrivateAssets>
		  <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
	</ItemGroup>

	<Target Name="PreBuild" BeforeTargets="PreBuildEvent">
	  <Exec Command="xcopy $(ProjectDir)\data\* $(TargetDir)\data\ /y&#xD;&#xA;xcopy $(ProjectDir)\font\* $(TargetDir)\font\ /y&#xD;&#xA;xcopy $(ProjectDir)\img\* $(TargetDir)\img\ /y&#xD;&#xA;&#xD;&#xA;xcopy $(ProjectDir)\data\* $(ProjectDir)\publish\data\ /y&#xD;&#xA;xcopy $(ProjectDir)\font\* $(ProjectDir)\publish\font\ /y&#xD;&#xA;xcopy $(ProjectDir)\img\* $(ProjectDir)\publish\img\ /y" />
	</Target>

</Project>
